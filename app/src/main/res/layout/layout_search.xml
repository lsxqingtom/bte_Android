<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/search_layout_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingLeft="13.5dp"
              android:paddingRight="13.5dp">

    <!--可以输入内容的搜索框样式，对应layout_search_no_search布局-->


    <com.btetop.widget.SearchEdittext
        android:id="@+id/ed_search"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="7dp"
        android:textCursorDrawable="@drawable/shape_et_cursor_color"
        android:layout_weight="1"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_search"
        android:drawablePadding="5dp"
        android:hint="请输入币对信息"
        android:imeOptions="actionSearch"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="@color/color_626A75"
        android:textColorHint="#cfcfcf"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_layout_container"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:text="确认"
        android:visibility="gone"
        android:textColor="@color/color_626A75_60"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
    />

</LinearLayout>