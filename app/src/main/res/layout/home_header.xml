<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/web_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_color">


        <ImageView
            android:id="@+id/menu_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_16"
            tools:visibility="visible"
            android:scaleType="center"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/iv_menu_left_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_toRightOf="@+id/menu_left"
            android:layout_marginTop="10dp"
            android:text="99"
            android:textStyle="bold"
            android:textSize="6dp"
            android:textColor="@color/xuanfu_red"

        />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_18"/>

        <ImageView
            android:id="@+id/tv_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/home_bar_logo"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@mipmap/home_top_share"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/web_title"
        android:background="#E6EBF0"/>
</RelativeLayout>

        