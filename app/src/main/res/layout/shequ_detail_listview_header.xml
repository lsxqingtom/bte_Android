<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
>


    <TextView
            android:id="@+id/nickname"
           android:textSize="10sp"
           android:textColor="@color/color_626A75"
           android:text="韭菜宝宝"
           android:layout_marginLeft="16dp"
           android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/content"
            android:layout_below="@+id/nickname"
            tools:text="sdfsdfsdfsfsdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_626A75"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="14dp"
    />

    <TextView
            android:id="@+id/header_thumb"
            android:text="点赞"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/selctor_thumb"
            android:paddingRight="16dp"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textColor="@color/color_626A75"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/header_share"
            android:text="分享"
            android:textColor="@color/color_626A75"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:drawableLeft="@mipmap/ic_share"
            android:layout_toLeftOf="@+id/header_thumb"
            android:layout_below="@id/content"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View
            android:id="@+id/temp"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/content"
            android:background="#ffedf0f2"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

    <TextView
            android:id="@+id/commentCount"
            android:layout_below="@id/temp"
            tools:text="5条评论"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
    />

    <View
            android:id="@+id/temp2"
            android:layout_below="@+id/commentCount"
            android:background="#ffedf0f2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
</RelativeLayout>