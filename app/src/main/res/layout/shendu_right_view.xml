<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="23dp">

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/right_percent"
                    android:textColor="@color/color_all_866"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp"
                    tools:text="+9%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <View
                    android:layout_centerVertical="true"
                    android:id="@+id/right_bg"
                    android:background="#33228B22"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <TextView
                    android:id="@+id/right_volume"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/color_60_866"
                    tools:text="4463"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView

                    android:id="@+id/right_price"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_228B22"
                    tools:text="4463.38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>


    <include layout="@layout/listview_item"/>
</RelativeLayout>