<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <include
        android:id="@+id/mining_head"
        layout="@layout/head_layout_complete"/>
    <ImageView
        android:id="@+id/iv_mining_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mining_head"
        android:background="@mipmap/mining_home"
    />
    <ImageView
        android:id="@+id/iv_mining_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@mipmap/mining_home_middle"
        android:visibility="gone"
        tools:visibility="visible"
    />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mining_head"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="@dimen/font_16"
        android:layout_toRightOf="@+id/tv_calculate"
        android:background="@mipmap/bg_count"
        android:drawableLeft="@mipmap/iv_count"
        android:gravity="right"
        android:paddingBottom="2dp"
        android:paddingLeft="112dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="0.000234"
    />

    <TextView
        android:id="@+id/tv_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mining_head"
        android:layout_marginLeft="@dimen/font_16"
        android:layout_marginTop="@dimen/font_16"
        android:background="@mipmap/bg_calculate"
        android:drawableLeft="@mipmap/iv_calculate"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="算力:123223"
    />
    <TextView
        android:id="@+id/tv_mining_btc_count"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mining_head"
        android:layout_marginTop="@dimen/font_16"
        android:background="@mipmap/bg_mining_rule"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="奖励池:100BTC"
        android:textColor="@color/white"
        android:textSize="12sp"
    />
    <TextView
        android:id="@+id/tv_mining_rule"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_mining_btc_count"
        android:layout_marginTop="@dimen/font_16"
        android:background="@mipmap/bg_mining_rule"
        android:drawableRight="@mipmap/iv_mining_rule"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="挖矿规则"
        android:textColor="@color/white"
        android:textSize="12sp"
    />

    <TextView
        android:id="@+id/tv_mining_info_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1天8时35分23秒"
        tools:visibility="visible"
    />

    <TextView
        android:id="@+id/tv_mining_info_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mining_info_middle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="距挖矿开始还有"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
    />

    <TextView
        android:id="@+id/tv_mining_info_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mining_info_middle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxEms="10"
        android:maxLines="3"
        android:text="开始时间:11月5日21点现在您可正常做算力任务"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
    />

    <ImageView
        android:id="@+id/iv_mining_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_calculate_add"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:src="@mipmap/iv_mining_notice"
    />

    <com.gongwen.marqueen.SimpleMarqueeView
        android:id="@+id/tv_mining_notice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/tv_calculate_add"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_mining_notice"
        android:flipInterval="3000"
        app:marqueeAnimDuration="3000"
        app:mvDirection="left_to_right"
        app:mvGravity="left"
        app:smvTextColor="@color/white"
        app:smvTextEllipsize="end"
        app:smvTextGravity="center_vertical"
        app:smvTextSize="15sp"
    />
    <TextView
        android:id="@+id/tv_calculate_add"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_task"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@mipmap/iv_calculate_add"
        android:gravity="center"
        android:padding="@dimen/font_10"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:text="算力提升"
        android:textColor="@color/white"
        android:textSize="16sp"
    />

    <TextView
        android:id="@+id/tv_fixed_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_calculate_add"
        android:layout_marginRight="16dp"
        android:drawableRight="@mipmap/iv_mining_rule"
        android:gravity="center"
        android:padding="@dimen/font_10"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="固定任务"
        android:textColor="@color/white"
        android:textSize="14sp"
    />

    <LinearLayout
        android:id="@+id/ll_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="4"
    >
        <LinearLayout
            android:id="@+id/ll_mining_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_mining1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/iv_mining_invite_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友"
                android:textColor="@color/white"
                android:textSize="12dp"

            />
            <TextView
                android:id="@+id/tv_mining_invite_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="+500"

            />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@mipmap/iv_mining_invite_friend_bottom"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mining_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_mining2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/iv_mining_keep_login"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续签到"
                android:textColor="@color/white"
                android:textSize="12dp"

            />
            <TextView
                android:id="@+id/tv_mining_keep_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="+500"

            />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@mipmap/iv_mining_keep_login_bottom"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mining_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_mining3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/iv_mining_day_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日分享"
                android:textColor="@color/white"
                android:textSize="12dp"

            />
            <TextView
                android:id="@+id/tv_mining_day_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="+500"

            />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@mipmap/iv_mining_day_share_bottom"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mining_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_mining4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >
            <ImageView
                android:id="@+id/iv_mining_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/iv_mining_read_retport_no"/>
            <TextView
                android:id="@+id/tv_mining_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读报告"
                android:textColor="@color/white"
                android:textSize="12dp"

            />
            <TextView
                android:id="@+id/tv_mining_read_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="+500"

            />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@mipmap/iv_mining_read_retport_bottom"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_mining_middle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@mipmap/bg_mining_middle1"
        android:gravity="center"
        android:text="0.00345"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible"
    />

    <TextView
        android:id="@+id/tv_mining_middle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_mining_middle2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="20:46"
        tools:visibility="visible"
    />
    <TextView
        android:id="@+id/tv_mining_middle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mining_middle2"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="挖矿中"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible"

    />
</RelativeLayout>