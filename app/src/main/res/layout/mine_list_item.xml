<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16">

        <View
            android:id="@+id/blue_line"
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:background="#44A0F1" />

        <TextView
            android:id="@+id/batchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@+id/blue_line"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="日内策略1期"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_hui" />

    </RelativeLayout>

    <com.btetop.widget.MyListView
        android:id="@+id/details_item_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/base_color"
        android:divider="@null">

    </com.btetop.widget.MyListView>


</LinearLayout>
