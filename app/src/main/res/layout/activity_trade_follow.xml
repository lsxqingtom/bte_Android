<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDFOF2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_color">

        <ImageView
            android:id="@+id/img_fan_hui"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/trade_status"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_18" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E6EBF0" />

    <RelativeLayout
        android:id="@+id/rl_trade_redemption"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/base_color">

        <ImageView
            android:id="@+id/iv_trade_line"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16sp"
            android:src="@mipmap/trade_line" />

        <TextView
            android:id="@+id/tv_trade_redemption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_toRightOf="@+id/iv_trade_line"
            android:text="跟随信息"
            android:textColor="@color/color_626A75"
            android:textStyle="bold"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_redemption_method"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_redemption_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="跟随策略"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_redemption_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_redemption_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_redemption_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="跟随本金"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_redemption_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_redemption_time"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_redemption_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="跟随时间"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_redemption_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/base_color">

        <ImageView
            android:id="@+id/iv_trade_confirm"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16sp"
            android:src="@mipmap/trade_line" />

        <TextView
            android:id="@+id/tv_trade_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_toRightOf="@+id/iv_trade_confirm"
            android:text="确认信息"
            android:textStyle="bold"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_confirm_status"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_confirm_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="确认状态"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_confirm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_confirm_count"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_confirm_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="确认额"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_confirm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_train_price"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_train_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="服务费"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_train_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_trade_confirm_time"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/base_color"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_trade_confirm_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="确认时间"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_confirm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_num"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/base_color">

        <TextView
            android:id="@+id/tv_trade_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="订单号"
            android:textColor="@color/color_626A75"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_trade_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:text=""
            android:textColor="@color/color_B2B6BB"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_E6EBF0" />
    </RelativeLayout>

    <TextView
        android:id="@+id/vNext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_button_blue"
        android:gravity="center"
        android:text="再次跟随"
        android:textColor="@color/base_color"
        android:textSize="17sp" />
</LinearLayout>
