            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="61dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
