<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="44dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="43dp">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/base_tv"
                        tools:text="ETC"
                        android:textSize="12sp"
                        android:textColor="@color/color_000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <TextView
                        tools:text="/"
                        android:textSize="10sp"
                        android:textColor="@color/color_626A75_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/quote_tv"
                        tools:text="USDT"
                        android:textSize="10sp"
                        android:textColor="@color/color_626A75_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                    android:id="@+id/exchange_tv"
                    android:textSize="10sp"
                    android:textColor="@color/color_60_866"
                    tools:text="Okex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>


        <TextView
                android:id="@+id/center_tv"
                android:gravity="center"
                tools:text="添加"
                android:textSize="13sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_308CDD"
        />


        <LinearLayout
                android:id="@+id/image_container_ll"
                android:layout_width="100dp"
                android:gravity="right"
                android:paddingRight="16dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@mipmap/ic_delete"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/divider_item"/>

</LinearLayout>