<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_message"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="3dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#44A0F1"
    />

    <ImageView
        android:id="@+id/iv_message_url"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_item_message_title"
        android:layout_marginRight="16dp"
        android:src="@mipmap/home_shichangfenxi_more"/>

    <TextView
        android:id="@+id/tv_item_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_626A75"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"
        tools:text="今日行情报告"
    ></TextView>
    <TextView
        android:id="@+id/tv_item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_message_title"
        android:layout_below="@+id/tv_item_message_title"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_626A75_40"
        android:textSize="@dimen/font_12"
        tools:text="04/09 12:48 "
    ></TextView>
    <TextView
        android:id="@+id/tv_item_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_message_title"
        android:layout_below="@+id/tv_item_message_time"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_626A75"
        android:textSize="@dimen/font_14"
        tools:text="比特币自下跌至6500美元附近后进入反弹盘整周期，目前已在6800-7200美元…"
    ></TextView>

    <View
            android:layout_alignParentBottom="true"
            android:background="#ffedf0f2"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
</RelativeLayout>
